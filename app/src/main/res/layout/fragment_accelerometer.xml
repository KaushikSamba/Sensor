<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kaushiksamba.sensor.AccelerometerFragment">

    <TextView
        android:text="X-Data" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/x_name"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#ff238c36" />

    <TextView android:text="Please use the sensor" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/x_detail"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="24sp"
        android:textColor="#ff000000" />

    <TextView android:text="Y-Data" android:layout_width="wrap_content"
        android:id="@+id/y_name"
        android:layout_below="@+id/x_name"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#ff238c36" />

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:id="@+id/y_detail"
        android:layout_height="wrap_content"
        android:layout_below="@+id/x_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="24sp"
        android:textColor="#ff000000" />

    <TextView android:text="Z-Data" android:layout_width="wrap_content"
        android:id="@+id/z_name"
        android:layout_below="@+id/y_name"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#ff238c36" />

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/z_detail"
        android:layout_below="@+id/y_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="24sp"
        android:textColor="#ff000000" />


</RelativeLayout>
